// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                         String           @id @default(cuid())
  email                      String           @unique
  passwordHash               String
  isAdmin                    Boolean          @default(false)
  createdAt                  DateTime         @default(now())
  googleCalendarRefreshToken String?
  grids                      Grid[]
  sharedGrids                GridShare[]
  ownedChannels              Channel[]
  channelGroups              ChannelGroup[]
  channelMemberships         ChannelMember[]
  channelMessages            ChannelMessage[]
  messages                   Message[]
  createdProjects            Project[]
  createdTasks               Task[]
  assignedTasks              Task[]             @relation("TaskAssignee")
  taskComments               TaskComment[]
  calendarEvents             GridCalendarEvent[]
}

model Grid {
  id              String               @id @default(cuid())
  name            String               @default("Untitled Grid")
  icon            String?              // emoji or single character for sidebar
  ownerId         String
  owner           User                 @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  tiles           Tile[]
  sharedWith      GridShare[]
  projects        Project[]
  tasks           Task[]
  calendarEvents  GridCalendarEvent[]
  createdAt       DateTime             @default(now())

  @@index([ownerId])
}

model GridCalendarEvent {
  id              String   @id @default(cuid())
  gridId          String
  grid            Grid     @relation(fields: [gridId], references: [id], onDelete: Cascade)
  title           String
  description     String?
  startAt         DateTime
  endAt           DateTime
  isAllDay        Boolean  @default(false)
  color           String?  // hex e.g. #3B82F6
  createdByUserId String?
  createdBy       User?    @relation(fields: [createdByUserId], references: [id], onDelete: SetNull)
  taskId          String?  // optional link to task (task due shows on calendar separately; this is for eventâ†’task link)
  createdAt       DateTime @default(now())

  @@index([gridId])
  @@index([startAt])
}

model GridShare {
  id          String   @id @default(cuid())
  gridId      String
  grid        Grid     @relation(fields: [gridId], references: [id], onDelete: Cascade)
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission  String   @default("view") // "view" or "edit"
  createdAt   DateTime @default(now())
  
  @@unique([gridId, userId])
  @@index([userId])
}

model Tile {
  id             String    @id @default(cuid())
  gridId         String
  grid           Grid      @relation(fields: [gridId], references: [id], onDelete: Cascade)
  type           String    // "notes", "dm", "channel", "tasks", "links", "calendar"
  x              Int
  y              Int
  w              Int
  h              Int
  hidden         Boolean   @default(false)
  onGrid         Boolean   @default(true)  // false = DM only in side panel until "Add to grid"
  channelId      String?   // For channel tiles and channel call tiles
  channel        Channel?  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  conversationId String?   // For DM tiles and DM call tiles
  callRoomLabel  String?   // For call tiles - display label (e.g. "Grid call", "#general")
  messages       Message[]
  createdAt      DateTime  @default(now())
  
  @@index([channelId])
}

model Message {
  id               String   @id @default(cuid())
  tileId           String
  tile             Tile     @relation(fields: [tileId], references: [id], onDelete: Cascade)
  userId           String?
  user             User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  encryptedContent String   // Client-side encrypted message
  createdAt        DateTime @default(now())

  @@index([tileId])
}

model Channel {
  id             String         @id @default(cuid())
  name           String
  description    String?
  emoji          String         @default("ðŸ“¢")
  isPrivate      Boolean        @default(false)
  ownerId        String
  owner          User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  channelGroupId String?
  channelGroup   ChannelGroup?  @relation(fields: [channelGroupId], references: [id], onDelete: SetNull)
  members        ChannelMember[]
  messages       ChannelMessage[]
  tiles          Tile[]
  createdAt      DateTime       @default(now())

  @@index([ownerId])
  @@index([channelGroupId])
}

model ChannelGroup {
  id        String    @id @default(cuid())
  name      String
  order     Int       @default(0)
  ownerId   String
  owner     User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  channels  Channel[]

  @@index([ownerId])
}

model ChannelMember {
  id        String   @id @default(cuid())
  channelId String
  channel   Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      String   @default("member") // "owner", "admin", "member"
  joinedAt  DateTime @default(now())
  
  @@unique([channelId, userId])
  @@index([userId])
}

model ChannelMessage {
  id               String   @id @default(cuid())
  channelId        String
  channel          Channel  @relation(fields: [channelId], references: [id], onDelete: Cascade)
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  encryptedContent String   // Client-side encrypted message
  createdAt        DateTime @default(now())
  
  @@index([channelId])
  @@index([userId])
}

model Project {
  id              String   @id @default(cuid())
  gridId          String
  grid            Grid     @relation(fields: [gridId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  visibility      String   @default("SHARED") // "PRIVATE" | "SHARED"
  createdByUserId String
  createdBy       User     @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)
  tasks           Task[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([gridId])
  @@index([createdByUserId])
}

model Task {
  id              String        @id @default(cuid())
  gridId          String
  grid            Grid          @relation(fields: [gridId], references: [id], onDelete: Cascade)
  projectId       String?
  project         Project?      @relation(fields: [projectId], references: [id], onDelete: SetNull)
  title           String
  description     String?
  status          String        @default("BACKLOG") // BACKLOG | IN_PROGRESS | BLOCKED | DONE
  priority        String        @default("MEDIUM")  // LOW | MEDIUM | HIGH
  dueAt           DateTime?
  assigneeUserId  String?
  assignee        User?         @relation("TaskAssignee", fields: [assigneeUserId], references: [id], onDelete: SetNull)
  createdByUserId String
  createdBy       User          @relation(fields: [createdByUserId], references: [id], onDelete: Cascade)
  visibility      String        @default("SHARED") // PRIVATE | SHARED
  calendarEventId String?       // Optional link to calendar event (e.g. Google event id or url)
  comments        TaskComment[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([gridId])
  @@index([projectId])
  @@index([assigneeUserId])
  @@index([createdByUserId])
}

model TaskComment {
  id               String   @id @default(cuid())
  taskId           String
  task             Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  encryptedContent String
  createdAt        DateTime @default(now())

  @@index([taskId])
  @@index([userId])
}
